{
  "name": "framework-guard",
  "version": "1.0.0",
  "description": "Express middleware toolkit: JWT auth, Zod validation, error handling, CORS/Helmet, request IDs/logging.",
  "keywords": [
    "express",
    "middleware",
    "jwt",
    "auth",
    "cors",
    "error-handling",
    "security",
    "helmet",
    "zod"
  ],
  "license": "MIT",
  "type": "module",
  "main": "dist/index.mjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=20"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aswanyaugustine123/framework-guard.git"
  },
  "bugs": {
    "url": "https://github.com/aswanyaugustine123/framework-guard/issues"
  },
  "homepage": "https://github.com/aswanyaugustine123/framework-guard#readme",
  "scripts": {
    "clean": "rimraf dist",
    "build": "npm run clean && tsup --config tsup.config.ts",
    "dev": "tsup --config tsup.config.ts --watch",
    "lint": "eslint \"src/**/*.ts\" \"tests/**/*.ts\" \"examples/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "type-check": "npm run typecheck",
    "test": "vitest run",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "verify": "npm run lint && npm run type-check && npm run test",
    "example:express": "tsx examples/express-basic.ts",
    "audit": "npm audit --audit-level=high",
    "release": "semantic-release",
    "prepack": "npm run build",
    "prepublishOnly": "npm run verify"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.0",
    "helmet": "^7.1.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/npm": "^11.0.3",
    "@semantic-release/release-notes-generator": "^14.0.1",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.0",
    "@types/supertest": "^6.0.2",
    "@types/node": "^18.19.0",
    "@typescript-eslint/eslint-plugin": "^7.15.0",
    "@typescript-eslint/parser": "^7.15.0",
    "conventional-changelog-conventionalcommits": "^7.0.2",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "pino": "^9.3.1",
    "rimraf": "^5.0.7",
    "semantic-release": "^24.0.0",
    "supertest": "^6.3.4",
    "tsup": "^8.5.0",
    "tsx": "^4.20.6",
    "typescript": "^5.6.0",
    "vitest": "^2.1.3"
  },
  "publishConfig": {
    "access": "public"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      [
        "@semantic-release/git",
        {
          "assets": [
            "CHANGELOG.md",
            "package.json"
          ],
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ]
    ]
  }
}
